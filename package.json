{
  "name": "typescript-boilerplate-backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Boilerplate made for typescript projects (includes Jest, Prettier, ESLint and Husky)",
  "main": "src/server.ts",
  "author": "Bilal Oulahal",
  "scripts": {
    "check-type": "tsc --noEmit",
    "dev": "nodemon --watch src --exec tsx src/server.ts",
    "build": "tsc",
    "preview": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:dev": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:build": "npm run lint:dev --max-warnings=0",
    "format": "pretty-quick --no-restage",
    "format:staged": "pretty-quick --staged",
    "format:all": "prettier --write .",
    "format-check": "pretty-quick --check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "eslint": "^9.14.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.12.2"
  }
}
